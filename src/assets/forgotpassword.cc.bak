@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: #f4f6f8;
}

/* Wrapper: centers the card */
.forgot-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: 100%;
  background: #f4f6f8;
  padding: 40px;
}

/* Card container */
.forgot-card {
  display: flex;
  width: 1000px;
  max-width: 1000px;
  min-height: 600px;
  background: #fff;
  border-radius: 20px;
  overflow: hidden;

  /* Floating effect */
  border: 1px solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.forgot-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 45px rgba(0, 0, 0, 0.2);
}

/* Left container */
.forgot-left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30px;
  background: #fff;
}

.forgot-form-container {
  width: 100%;
  max-width: 400px;
  margin: auto;
}

/* Right container (banner) */
.forgot-right {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.forgot-right::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('assets/background.jpg') center center / cover no-repeat;
  filter: blur(2px);
  transform: scale(1.05);
  z-index: 1;

  opacity: 0;
  animation: fadeInBlur 1.2s ease forwards;
}

@keyframes fadeInBlur {
  from {
    opacity: 0;
    transform: scale(1.1);
  }
  to {
    opacity: 1;
    transform: scale(1.05);
  }
}

.forgot-overlay {
  position: relative;
  z-index: 2;
  background: rgba(0, 0, 0, 0.55);
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  text-align: center;
  padding: 30px;
}

/* Logo */
.forgot-logo {
  width: 160px;
  height: auto;
  object-fit: contain;
  margin: 0 auto 25px auto;
  display: block;
  transition: transform 0.3s ease;
}

.forgot-logo:hover {
  transform: scale(1.05);
}

/* Headings */
.forgot-title {
  text-align: center;
  font-size: 24px;
  font-weight: 600;
  color: #C34C4D;
  margin-bottom: 10px;
}

.forgot-subtitle {
  text-align: center;
  font-size: 14px;
  color: #666;
  margin-bottom: 30px;
}

/* Shared input style for all fields */
.forgot-input {
  width: 100%;
  padding: 12px 15px; /* Default padding for all inputs */
  border: 1px solid #ddd;
  border-radius: 20px;
  margin-bottom: 20px;
  font-size: 14px;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.forgot-input:focus {
  outline: none;
  border-color: #C34C4D;
  background-color: #fff;
  box-shadow: 0 0 6px rgba(195, 76, 77, 0.3);
}

/* Special style for the input group container */
.input-group {
  position: relative;
}

/* Override padding for inputs inside the .input-group */
.input-group .forgot-input {
  padding-right: 45px;
}

/* Eye icon properly centered */
.toggle-password {
  position: absolute;
  right: 15px;
  top: 35%;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 16px;
  color: #888;
}
/* Buttons */
.send-code-button,
.forgot-button {
  width: 100%;
  background-color: #C34C4D;
  color: white;
  font-size: 16px;
  font-weight: 600;
  padding: 12px;
  border: none;
  border-radius: 50px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.send-code-button:hover,
.forgot-button:hover {
  background-color: #a73c3d;
  transform: scale(1.03);
}

.button-group {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

/* Back to login link */
.back-link {
  text-align: center;
  margin-top: 15px;
}

.back-link a {
  color: #C34C4D;
  text-decoration: none;
  font-weight: 500;
}

.back-link a:hover {
  text-decoration: underline;
  color: #a73c3d;
}

/* Banner text */
.forgot-banner-title {
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 10px;
}

.forgot-banner-sub {
  font-size: 18px;
  margin-bottom: 10px;
}

.forgot-banner-tagline {
  font-size: 14px;
  opacity: 0.9;
}

/* Responsive: collapse right panel */
@media (max-width: 768px) {
  .forgot-card {
    flex-direction: column;
    min-height: auto;
  }

  .forgot-right {
    display: none;
  }

  .forgot-left {
    padding: 30px 20px;
  }
}
