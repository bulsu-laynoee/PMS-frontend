/* src/assets/forgotpassword.css */

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: #f4f6f8;
}

/* Layout */
.forgot-wrapper {
  display: flex;
  height: 100vh;
  width: 100%;
}

/* Left side: Form */
.forgot-left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  padding: 40px;
}

.forgot-form-container {
  width: 100%;
  max-width: 400px;
}

/* Logo */
.forgot-logo {
  width: 160px;
  height: auto;
  object-fit: contain;
  margin: 0 auto 25px auto;
  display: block;
}

/* Headings */
.forgot-title {
  text-align: center;
  font-size: 24px;
  font-weight: 600;
  color: #C34C4D;
  margin-bottom: 10px;
}

.forgot-subtitle {
  text-align: center;
  font-size: 14px;
  color: #666;
  margin-bottom: 30px;
}

/* Form */
.forgot-input {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  margin-bottom: 20px;
  font-size: 14px;
  background-color: #f9f9f9;
}

.forgot-input:focus {
  outline: none;
  border-color: #C34C4D;
  background-color: #fff;
  box-shadow: 0 0 5px rgba(195, 76, 77, 0.3);
}

/* Button */
.forgot-button {
  width: 100%;
  background-color: #C34C4D;
  color: white;
  font-size: 16px;
  font-weight: 600;
  padding: 12px;
  border: none;
  border-radius: 50px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.forgot-button:hover {
  background-color: #a73c3d;
  transform: scale(1.02);
}

/* Back to login link */
.back-link {
  text-align: center;
  margin-top: 15px;
}

.back-link a {
  color: #C34C4D;
  text-decoration: none;
  font-weight: 500;
}

.back-link a:hover {
  text-decoration: underline;
  color: #a73c3d;
}

/* Right side: Background image */
.forgot-right {
  flex: 1;
  background: url('assets/background.jpg') center center / cover no-repeat;
  position: relative;
}

.forgot-overlay {
  background-color: rgba(0, 0, 0, 0.4);
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  text-align: center;
  padding: 30px;
}

.forgot-banner-title {
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 10px;
}

.forgot-banner-sub {
  font-size: 18px;
  margin-bottom: 10px;
}

.forgot-banner-tagline {
  font-size: 14px;
}

.input-group {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.send-code-button {
  width: 100%;
  background-color: #C34C4D;
  color: white;
  font-size: 16px;
  font-weight: 600;
  padding: 12px;
  border: none;
  border-radius: 50px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.send-code-button:hover {
  background-color: #a73c3d;
  transform: scale(1.02);
}

.button-group {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.send-code-button,
.forgot-button {
  flex: 1;
}
